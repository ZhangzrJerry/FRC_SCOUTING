<!-- wxml布局 -->

<canvas
  class='canvas'
  canvas-id='my-canvas' 
  disable-scroll='{{true}}'
  bindtouchstart='touchStart' 
  bindtouchmove='touchMove'>
</canvas>

<!-- clear方法是擦除操作 -->
<view class='rubber' bindtap='clear' hover-class='change'>
  我是橡皮檫
</view>
